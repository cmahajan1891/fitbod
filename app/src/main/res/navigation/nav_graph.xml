<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exercises">

    <fragment
        android:id="@+id/exercises"
        android:name="com.example.fitbod.fragments.Exercises"
        android:label="@string/main_page_label"
        tools:layout="@layout/fragment_exercises">
        <action
            android:id="@+id/action_exercises_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/exercises" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fitbod.fragments.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="exerciseName"
            app:argType="string" />
        <argument
            android:name="oneRepMax"
            app:argType="string" />
    </fragment>
</navigation>
